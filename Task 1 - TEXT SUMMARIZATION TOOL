from transformers import pipeline
import gradio as gr

# Load the summarization model
summarizer = pipeline("summarization", model="facebook/bart-large-cnn")


# Define the summarization function
def summarize_text(text, max_length=180, min_length=50):
    if len(text.strip()) == 0:
        return "Please enter some text."
    summary = summarizer(text, max_length=max_length, min_length=min_length, do_sample=False)
    return summary[0]['summary_text']

# Define the Gradio interface
with gr.Blocks(theme=gr.themes.Base(), css=".gradio-container { font-family: 'Segoe UI', sans-serif; }") as demo:
    gr.Markdown(
        """
        # ğŸ§  AI Text Summarizer
        Enter a long article, and this tool will generate a concise summary using a pre-trained transformer model.
        """
    )

    with gr.Row():
        with gr.Column():
            input_text = gr.Textbox(label="ğŸ“ Input Text", placeholder="Paste your article here...", lines=15)
            max_length = gr.Slider(50, 300, value=180, label="ğŸ”  Max Summary Length")
            min_length = gr.Slider(10, 100, value=50, label="ğŸ”¡ Min Summary Length")
            summarize_button = gr.Button("âœ¨ Summarize")

        with gr.Column():
            output_text = gr.Textbox(label="ğŸ“„ Summarized Output", lines=15)

    summarize_button.click(fn=summarize_text, inputs=[input_text, max_length, min_length], outputs=output_text)

# Launch the app
demo.launch()


